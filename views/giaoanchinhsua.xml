                  <p class="oe_view_nocontent_create">
                    Thêm mới giao dịch với trường học
                  </p>
                </field>
              </record>

              <record model="ir.ui.view" id="giaodichtruonghoc_form_view">
                <field name="name">giaodichtruonghoc.form</field>
                <field name="model">giaoanchinhsua.giaodichtruonghoc</field>
                <field name="arch" type="xml">
                  <form string="Giao dịch trường học">
                    <sheet>
                      <group>
                        <field name="name"/>
                        <field name="MaGD"/>
                        <field name="start_time"/>
                        <field name="end_time"/>
                        <field name="truonghoc"/>
                        <field name="conhieuluc" string="Còn hiệu lực"/>
