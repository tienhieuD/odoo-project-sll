<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <record model="ir.actions.act_window" id="giaovien_list_action">
      <field name="name">Giáo viên</field>
        <field name="res_model">giaoanchinhsua.giaovien</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Thêm mới giáo viên
          </p>
        </field>
      </record>

      <record model="ir.ui.view" id="giaovien_form_view">
        <field name="name">giaovien.form</field>
        <field name="model">giaoanchinhsua.giaovien</field>
        <field name="arch" type="xml">
          <form string="Giáo viên">
            <sheet>
              <group>
                <field name="name"/>
                <field name="is_hieu_truong"/>
                <field name="truonghoc"/>
                <field name="email"/>
                <field name="password"/>
                <field name="phone"/>
                <field name="ccdaxem"/>
              </group>
            </sheet>
          </form>
        </field>
      </record>

      <!-- override the automatically generated list view for courses -->
      <record model="ir.ui.view" id="giaovien_tree_view">
        <field name="name">giaovien.tree</field>
        <field name="model">giaoanchinhsua.giaovien</field>
        <field name="arch" type="xml">
          <tree string="Giáo viên Tree">
            <field name="name"/>
            <field name="is_hieu_truong"/>
            <field name="truonghoc"/>
          </tree>
        </field>
      </record>

      <record model="ir.ui.view" id="tietdaxem_tree_view">
        <field name="name">tietdaxem.tree</field>
        <field name="model">giaoanchinhsua.tietdaxem</field>
        <field name="arch" type="xml">
          <tree string="tietdaxem Tree">
            <field name="chuongtrinh"/>
            <field name="tiethocmin"/>
            <field name="tiethocmax"/>
          </tree>
        </field>
      </record>

      <record model="ir.ui.view" id="tietdaxem_form_view">
        <field name="name">tietdaxem.form</field>
        <field name="model">giaoanchinhsua.tietdaxem</field>
        <field name="arch" type="xml">
          <form string="Tiết đã xem">
            <sheet>
              <group>
                <field name="chuongtrinh"/>
                <field name="tiethocmin"/>
                <field name="tiethocmax"/>
              </group>
            </sheet>
          </form>
        </field>
      </record>


          <record model="ir.actions.act_window" id="giaodichcanhan_list_action">
            <field name="name">Giao dịch với giáo viên</field>
              <field name="res_model">giaoanchinhsua.giaodichcanhan</field>
              <field name="view_type">form</field>
              <field name="view_mode">tree,form</field>
              <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                  Thêm mới giao dịch với giáo viên
                </p>
              </field>
            </record>

            <record model="ir.ui.view" id="giaodichcanhan_form_view">
              <field name="name">giaodichcanhan.form</field>
              <field name="model">giaoanchinhsua.giaodichcanhan</field>
              <field name="arch" type="xml">
                <form string="Giáo viên">
                  <sheet>
                    <group>
                      <field name="name"/>
                      <field name="MaGD"/>
                      <field name="giaovien"/>
                      <field name="start_time"/>
                      <field name="end_time"/>
                      <field name="chuongtrinhapdung"/>
                      <field name="conhieuluc" string="Còn hiệu lực"/>
                    </group>
                  </sheet>
                </form>
              </field>
            </record>

            <!-- override the automatically generated list view for courses -->
            <record model="ir.ui.view" id="giaodichcanhan_tree_view">
              <field name="name">giaovien.tree</field>
              <field name="model">giaoanchinhsua.giaodichcanhan</field>
              <field name="arch" type="xml">
                <tree string="Giáo viên Tree">
                  <field name="name"/>
                  <field name="giaovien"/>
                  <field name="chuongtrinhapdung"/>
                </tree>
              </field>
            </record>

            <record model="ir.actions.act_window" id="giaodichtruonghoc_list_action">
              <field name="name">Giao dịch trường học</field>
                <field name="res_model">giaoanchinhsua.giaodichtruonghoc</field>
                <field name="view_type">form</field>
