    <!-- Giáo viên - form view -->
    <record id="giaovien_view_form" model="ir.ui.view">
      <field name="name">giaovien.form</field>
      <field name="model">solienlac.giaovien</field>
      <field name="arch" type="xml">
        <form string="Giáo viên">
          <header>
            Quản lý thông tin giáo viên
          </header>
          <sheet>
            <group colspan="4" col="4" string='Thông tin giáo viên'>
              <group colspan="2" col="2">
                <field name="magiaovien"/>
                <field name="hoten"/>
                <field name="gioitinh"/>
                <field name="truong"/>
                <!-- <field name="name"/>
                <field name="login"/>
                <field name="partner_id"/>
                <field name="company_id"/> -->
              </group>
              <group colspan="2" col="2">
                <field name="ngaysinh"/>
                <field name="noisinh"/>
                <field name="sodienthoai"/>
                <field name="socmnd"/>
                <field name="email"/>
              </group>

            </group>
            <group colspan="4" col="4">
              <group colspan="2" col="2" string='Thông tin quản lý'>
                <field name="phuongxa"/>
                <field name="dantoc"/>
                <field name="tongiao"/>
              </group>
              <group colspan="2" col="2" string='Thông tin quản lý'>
                <field name="bomon" widget="many2many_tags"/>
                <field name="phongban"/>
                <!-- <field name="chucvu" widget="many2one_tags"/> -->
                <field name="vanbang"/>
                <field name="dien"/>
                <field name="namvaonganh"/>
                <field name="tinhtranghonnhan"/>
              </group>
              <notebook colspan="4">
                <page string="Phân công giảng dạy">
                  <field name="monhoc"/>
                </page>
              </notebook>
            </group>
          </sheet>
        </form>
      </field>
    </record>

